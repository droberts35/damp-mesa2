<tr>
	<td>
	  <div class='player'>
		<%= image_tag(gravatar_url(rating.player, size: 24)) %>
		<%= link_to rating.player.name, player_game_path(rating.player, @game) %>
	  </div>
	</td>

	<td><%= rating.value + 1000 %></td>
  <td><%= rating.player.results.for_game(rating.game).wins.size %></td>
  <td><%= rating.player.results.for_game(rating.game).losses.size %></td>
  <%= total_games=rating.player.results.for_game(rating.game).wins.size + rating.player.results.for_game(rating.game).losses.size  %>
  <td><%= rating.player.results.for_game(rating.game).wins.size / total_games %></td> 
</tr>
